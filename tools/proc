## Apache 2.0 License
##
##  Runs a command
##  vala dies with 1 error, and there is no error text.
##  but I can run this... 
##
 */

(function() {
  var cmd, exec;

  exec = require('child_process').exec;

  cmd = decodeURIComponent(process.argv[2]);

  if (cmd[0] === '"') {
    cmd = cmd.slice(1, -1);
  }

  exec(cmd, function(error, stdout, stderr) {
    if (stdout) {
      console.log(stdout);
    }
    if (stderr) {
      console.error(stderr);
    }
    if (error) {
      return process.exit(1);
    }
  });

}).call(this);
