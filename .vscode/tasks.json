{
    "version": "0.1.0",
    "command": "/bin/sh",
    "cwd": "${workspaceRoot}",
    "isShellCommand": true,
    "args": ["-c"],
    "showOutput": "always",
    "echoCommand": true,
    "suppressTaskName": true,
    "tasks": [
        {
            "isBuildCommand",
            "taskName": "build",
            "args": ["cd install && make"]
        },
        {
            "taskName": "clean",
            "args": ["rm -r ${workspaceRoot}/install && mkdir ${workspaceRoot}/install"]
        },
        {
            "taskName": "update",
            "args": ["autovala refresh && sed -i -n '/*vala_check_package:/!p' ./${workspaceRootFolderName}.avprj && autovala cmake  && cd install && cmake .. "]
        }
    ]
}